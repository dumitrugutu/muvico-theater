<h1 class="text-center">Add Auditorium</h1>


<div class="row">
  <div class="col-md-12">
    <%= form_for(@auditorium, :html => { class: "form-horizontal", role: "form"}) do |f| %>
    <% if @auditorium.errors.any? %>
      <h3><%= pluralize(@auditorium.errors.count, "error") %> prevented this auditorium from being created: </h3>
      <% @auditorium.errors.full_messages.each do |error| %>
        <ul>
          <li><%= error %></li>
        </ul>
      <% end %>
    <% end %>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label "Name: " %>
        </div>
        <div class="col-md-6 col-sm-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label "Seat capacity: " %>
        </div>
        <div class="col-md-6 col-sm-6">
          <%= f.number_field :seat_capacity, class: "form-control", placeholder: "Seat capacity" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-9 col-sm-9">
          <%= f.submit "Save", class: "btn btn-primary btn-md pull-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
