<h1><%= @movie.title %></h1>

<div class="row">
  <div class="media">
    <div class="media-left media-middle">
      <img class="media-object" src="http://placehold.it/200x150" alt="<%= @movie.title %>">
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= @movie.title %></h4>
      <%= @movie.start_time.strftime("%I:%m %p  %b/%d/%Y") %>
      <%= link_to "Buy ticket", new_movie_purchase_path(@movie) %>
    </div>
  </div>
</div>
