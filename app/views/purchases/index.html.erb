<h1 class="text-center">Orders</h1>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Date</th>
          </tr>
        </thead>
        <% @purchases.each do |purchase| %>
          <tbody>
            <tr>
              <td><%= purchase.movie.title %></td>
              <td>$$$<%= %></td>
              <td><%= purchase.created_at.strftime("%l:%S %p %m/%d/%Y") %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
